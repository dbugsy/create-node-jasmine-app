{
  "env": {
    "es6": true,
    "node": true,
    "jasmine": true
  },
  "extends": "plugin:jasmine/recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "plugins": ["jasmine"]
}